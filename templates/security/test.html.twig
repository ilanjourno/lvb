{% block content %}
<h1 class="text-center text-white">Intranet de Lergon'Home</h1>
<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
			<div class="card-header">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
			</div>
          <div class="card-body">
            <h5 class="card-title text-center">Se connecter</h5>
            <form action="{{url('app_login')}}" class="form-signin" method="post">
				<input type="hidden" name="_csrf_token"
					value="{{ csrf_token('authenticate') }}"
				>
              <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" required autofocus  value="{{ last_username}}" name="email">
              </div>

              <div class="form-group">
                <input type="password" class="form-control" placeholder="Mot de passe" required name="password">
              </div>

              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1" name="_remember_me">
                <label class="custom-control-label" for="customCheck1">Se souvenir de moi</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Se connecter</button>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}
