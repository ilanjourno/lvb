{% extends 'admin/base.html.twig' %}

{% block title %}BeerFile{% endblock %}
{% set title = beer_file.name %}
{% block header %}
    <div class="row justify-content-end">
        <a href="{{ path('beer_file_files_index', {id: beer_file.id}) }}" class="btn btn-warning">Les images</a>
        <a href="{{ path('beer_file_index') }}" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ beer_file.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ beer_file.name }}</td>
            </tr>
            <tr>
                <th>Région :</th>
                <td>{{ beer_file.district }}</td>
            </tr>
            <tr>
                <th>Créer le :</th>
                <td>{{ beer_file.createdAt ? beer_file.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le :</th>
                <td>{{ beer_file.updatedAt ? beer_file.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('beer_file_edit', {'id': beer_file.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('admin/beer_file/_delete_form.html.twig') }}
        </div>
    </div>
    
{% endblock %}
